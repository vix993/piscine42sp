int		ft_strcmp(char *s1, char *s2)
{
	int				i;
	unsigned char	c1;
	unsigned char	c2;

	c1 = 0;
	c2 = 0;
	i = 0;
	while (c1 == c2)
	{
	    c1 = s1[i];
		c2 = s2[i];
		if (c2 == '\0')
			return (c1 - c2);
	    i++;
	}
	return (c1 - c2);
}
/* ************************************************************************** */
/*                                                                            */
/*                                                        :::      ::::::::   */
/*   strncmp.c                                          :+:      :+:    :+:   */
/*                                                    +:+ +:+         +:+     */
/*   By: vnascime <marvin@42.fr>                    +#+  +:+       +#+        */
/*                                                +#+#+#+#+#+   +#+           */
/*   Created: 2019/10/15 09:57:01 by vnascime          #+#    #+#             */
/*   Updated: 2019/10/16 21:31:56 by vnascime         ###   ########.fr       */
/*                                                                            */
/* ************************************************************************** */

int		ft_strncmp(char *s1, char *s2, unsigned int n)
{
	unsigned char c1;
	unsigned char c2;
	int i;

	c1 = '\0';
	c2 = '\0';
	i = 0;
	while (i < n)
	{
		c1 = s1[i];
		c2 = s2[i];
		if (c1 == '\0' || c1 != c2)
			return (c1 - c2);
		i++;
	}
	return (c1 - c2);
}
