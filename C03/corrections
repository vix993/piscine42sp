#include <stdio.h>

char	*ft_strstr(char *str, char *to_find)
{
	int i;
	int j;
	int a;

	i = 0;
	if (to_find[i] == 0)
	    return(str);
	while (str[i] != '\0')
	{
		j = 0;
		a = i;
		while (str[i] == to_find[j])
		{
			j++;
			i++;
			if (to_find[j] == '\0')
				return (str + a);
		}
		i = a;
		i++;
	}
	return (0);
}